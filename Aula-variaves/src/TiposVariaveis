public class TipoasVariaveis {
    public static void main(String[] args) throws Exception {

        byte idade = 123;
        short ano = 2021;
        int cep = 12345678; // se começar com zero, talvez tenha que ser outro tipo
        long cpf = 12345678901L; // se começar com zero, talvez tenha que ser outro tipo
        float pi = 3.14F;
        double salario = 1234.56;

        short numeroCurto = 1;
        int numeroNormal = numeroCurto;
        short numeroCurto2 = (short) numeroNormal;

        // não deixar o valor ser alterado
        final double VALOR_DE_PI = 3.14;

        VALOR_DE_PI = 10.75;

    }

}